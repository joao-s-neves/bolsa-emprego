<% provide(:title, @offer.title) %>
<div class="row">
  <aside class="col-md-2">
    <section class="offer_info">
    <h1>
        <%= @offer.title %><br>
        <%#= gravatar_for @candidate.user %>
      </h1>
    </section>
    <% if logged_in? && current_user.candidate? %>
    <%= link_to "Candidatar-me", "", class: "btn btn-primary btn-xs" %><br>
    <% end %>
    <% if logged_in? && current_user.company_id == @offer.company_id %>
    <%= link_to "Editar", edit_offer_path, class: "btn btn-primary btn-xs" %>
    <% end %>
  </aside>
  <aside class="col-md-10">
  <section class="offer_info2">
  <p id="teste2">
        <%= @offer.description %><br>
  </p>
  <p><%= @offer.begins %> a <%= @offer.ends %></p>
  <h2 id="subtitulo">Empresa</h2>
    <p>
        <%#= @offer.company.name %><br>
  </p>
    <h2 id="subtitulo"> Atividade Prossional</h2>
    <p>
        <%= @offer.professional_activity.name %><br>
  </p>

  <h2 id="subtitulo">Tipo de contrato</h2>
    <p>
        <%= @offer.contract_type %><br>
  </p>

  <h2 id="subtitulo">Sal√°rio</h2>
    <p>
        <%= @offer.salary %><br>
  </p>
<br>
  <h1>Candidatos</h1>
  <ul class="candidates">
  <% @candidates.each do |candidate| %>
    <li>
      <%= image_tag candidate.user.picture, size: 50 %>
      <%= link_to candidate.user.name, candidate %><br>
      <%#= candidate.habilitation.name %>
      <%= candidate.professional_area.name %>
    </li>
  <% end %>
  </ul>
  </section>
  </aside>
</div>
