<% provide(:title, @candidate.user.name) %>
<div class="row">
  <aside class="col-md-2">
    <section class="user_info">
    <h1>
        <%= @candidate.user.name %><br>
        <%= image_tag @candidate.user.picture, size:100 %>
      </h1>
    </section>
    <% if logged_in? && current_user.company? %>
    <%= render 'users/follow_form', model: @candidate %><br>
    <% end %>
    <% if logged_in? && current_user.candidate_id == @candidate.id %>
    <%= link_to "Editar", edit_candidate_path(current_user.candidate_id), class: "btn btn-primary btn-xs" %>
    <% end %>
  </aside>
  <aside class="col-md-10">
  <section class="user_info2">
  <p id="teste2">
        <%= @candidate.user.presentation %><br>
  </p>
  <h2 id="subtitulo">Atividade Profissonal</h2>
    <p>
        <%= @candidate.professional_area.name %><br>
  </p>
<br>
  <br><h1> Dados Profissionais </h1>
    <h2 id="subtitulo"> Situação Profissonal</h2>
    <p>
        <%= @candidate.professional_situation.name %><br>
  </p>

  <h2 id="subtitulo">Nível Hablitações</h2>
    <p>
        <%#= @candidate.habilitation.name %><br>
  </p>

  <h2 id="subtitulo">Hablitações Literárias</h2>
    <p>
        <%= @candidate.habilitation_description %><br>
  </p>

  <h2 id="subtitulo">Experiência Profissional</h2>
    <p>
        <%= @candidate.experience %><br>
  </p>
<br>
  <h1>Dados Pessoais</h1>
  <h2 id="subtitulo">Morada</h2>
    <p>
        <%= @candidate.user.address %><br>
  </p>
  <p><%= @candidate.user.zip_code %> <%= @candidate.user.city %></p>
  </section>
  </aside>
</div>
