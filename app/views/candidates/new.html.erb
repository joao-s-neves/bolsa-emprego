<% provide(:title, 'Registo de Candidatos') %>
<% provide(:button_text, 'Criar a minha conta') %>
<h1>Registo de candidatos</h1>
<%= simple_form_for(@candidate, html: { multipart: true }) do |f| %>
      <%= render 'shared/error_messages',  model: @candidate %>
      <table>
      <!--- JOIN TABLE USER -->
      <%= f.fields_for :user, @user do |u| %>
      <%#= render 'shared/new' %>
      <%= u.label :email %>
      <%= u.email_field :email, class: 'form-control'  %>

      <!-- <div class="form-group"> -->
      <tr>
      <%= u.label :password %> <%= u.password_field :password , class: 'form-control'  %>

      <%= u.label :password_confirmation, "Confirme a sua password" %>
      <%= u.password_field :password_confirmation, class: 'form-control'  %>
      </tr>
      <!-- </div> -->

      <%= u.label :name %>
      <%= u.text_field :name, class: 'form-control'  %>

      <!-- FALTA IMPLEMENTAR FOTO FILE-->
      <%= u.label :picture, "Foto" %>
      <%= u.file_field :picture %>
      <!-- <div class="gravatar_edit">
      <%#= gravatar_for @user %>
      <a href="http://gravatar.com/emails" target="_blank">Foto</a>

      </div> -->

      <%= u.label :address, "Morada" %>
      <%= u.text_area :address, class: 'form-control'  %>

      <%= u.label :zip_code, "Código Postal" %>
      <%= u.text_field :zip_code, class: 'form-control'  %>

      <%= u.label :city, "Localidade" %>
      <%= u.text_field :city, class: 'form-control'  %>

      <%= u.label :contact, "Contacto" %>
      <%= u.text_field :contact, class: 'form-control'  %>

      <%= u.label :page, "Página pessoal" %>
      <%= u.text_field :page, class: 'form-control'  %>

      <%= u.label :presentation, "Apresentação" %>
      <%= u.text_area :presentation, class: 'tinymce' %>
      <%= tinymce %>
      <% end %>
      <!-- END -->


      <%= f.label :birth_date, "Data de nascimento" %>
      <%= f.date_field :birth_date, class: 'form-control' %>

      <%= f.label :document, "Cartão de Cidadão/BI" %>
      <%= f.text_field :document, class: 'form-control' %>

      <!--- FALTA IMPLEMENTAR CV FILE -->
      <a href="http://gravatar.com/emails" target="_blank">Curriculum Vitae</a><br>

      <%= f.label :professional_area_id, "Área Profissional" %><br>
      <%= f.collection_select :professional_area_id, @professional_areas, :id, :name, :prompt => "Seleccione uma área profissional" %><br>

      <%= f.label :habilitations_id, "Nível de hablitações" %><br>
      <%= f.collection_select :habilitations_id, @habilitations, :id, :name, :prompt => "Seleccione o seu nível de hablitações" %><br>

      <%= f.label :habilitation_description, "Hablitações Literárias" %><br>
      <%= f.text_area :habilitation_description, class: 'tinymce' %>
      <%= tinymce %>

      <%= f.label :professional_situation_id, "Situação profissional" %><br>
      <%= f.collection_select :professional_situation_id, @professional_situations, :id, :name, :prompt => "Seleccione uma situação profissional" %><br>

      <%= f.label :experience, "Experiência Profissional" %><br>
      <%= f.text_area :experience, class: 'tinymce' %>
      <%= tinymce %>


      <%= f.submit yield(:button_text), class: "btn btn-primary btn-xs" %>
      <%= f.submit "Cancelar", class: "btn btn-primary btn-xs" %>
    <% end %>
    </table>
</div>
