<% provide(:title, 'Candidatos') %>
<h1>Candidatos</h1>

<ul class="candidates">
  <% @candidates.each do |candidate| %>
    <li>
      <%= image_tag candidate.user.picture, size: 50 %>
      <%#= gravatar_for user, size: 50 %>
      <%= link_to candidate.user.name, candidate %>
    </li>
  <% end %>
</ul>

<%= will_paginate %>
