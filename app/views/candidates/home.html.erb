<% provide(:title, 'Bolsa de Emprego') %>
<div class="row">
  <aside class="col-md-6">
  <h2>Candidaturas</h2>
    <ul class="offers">
      <% @offers.each do |offer| %>
        <li>
          <%#= image_tag candidate.user.picture, size: 50 %>
          <%#= gravatar_for user, size: 50 %>
          <%= link_to offer.title, offer %>
        </li>
      <% end %>
    </ul>

    <h2>Empresas Interessadas em mim</h2>

    <ul class="companies">
      <% @companies.each do |company| %>
        <li>
          <%#= image_tag candidate.user.picture, size: 50 %>
          <%#= gravatar_for user, size: 50 %>
          <%#= link_to company.name, company %>
        </li>
      <% end %>
    </ul>
  </aside>
  <aside class="col-md-6">
  <h2>Candidato</h2>
  <%= link_to "Editar dados", edit_candidate_path(current_user.candidate_id), class: "btn btn-primary btn-xs" %>
  <%= link_to "Alterar password", '', class: "btn btn-primary btn-xs" %>
  </aside>
</div>
