<% provide(:title, 'Inserir Utilizador') %>
<% provide(:button_text, 'Ok') %>
<h1>Inserir Utilizador</h1>
<%= simple_form_for(@user, html: { multipart: true }) do |f| %>
      <%= render 'shared/error_messages',  model: @user %>
      <%= f.label :email %>
      <%= f.email_field :email, class: 'form-control'  %>

      <!-- <div class="form-group"> -->
      <tr>
      <%= f.label :password %> <%= f.password_field :password , class: 'form-control'  %>

      <%= f.label :password_confirmation, "Confirme a sua password" %>
      <%= f.password_field :password_confirmation, class: 'form-control'  %>
      </tr>
      <!-- </div> -->

      <%= f.label :name %>
      <%= f.text_field :name, class: 'form-control'  %>

      <%= f.label :activated, "Activo" %><br>
      <%= f.check_box :activated, class: 'form-control' %>


      <%= f.submit yield(:button_text), class: "btn btn-primary btn-xs" %>
      <%= f.submit "Cancelar", class: "btn btn-primary btn-xs" %>
    <% end %>
    </table>
</div>
